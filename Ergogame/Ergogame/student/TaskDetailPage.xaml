<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ergogame.student.TaskDetailPage">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout Grid.Column="0" Grid.Row="0" >
                <Label Text="Dysfagi"></Label>
                <Label Text="Description"></Label>
                <Label Text="Lorem ipisum"></Label>
            </StackLayout>
            <StackLayout Grid.Column="1" Grid.Row="0">
                <StackLayout WidthRequest="75">
                    <Button ContentLayout="right,0" HeightRequest="75" WidthRequest="175"   HorizontalOptions="CenterAndExpand"  Text="Next" Image="arrowleftwhite.png"></Button>
                </StackLayout>
            </StackLayout>

         
        </Grid>
    </ContentPage.Content>
</ContentPage>