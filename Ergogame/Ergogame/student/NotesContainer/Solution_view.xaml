<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ergogame.student.NotesContainer.Solution_view">
  <ContentView.Content>
      <StackLayout>
          <StackLayout x:Name="SL_list" Orientation="Horizontal" Spacing="0">
          </StackLayout>
          <StackLayout x:Name="SL_content" Padding="10" >
              <BoxView Color="{StaticResource lightgreenColor}" HeightRequest="1" HorizontalOptions="StartAndExpand" WidthRequest="500"/>
              <Label x:Name="LB_NotesField" Text="Notes from other student" VerticalOptions="Start" HorizontalOptions="Start" Style="{StaticResource NormTxt}" />
             </StackLayout>
      </StackLayout>
    </ContentView.Content>
</ContentView>